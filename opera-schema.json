{
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "title": { "type": "string" },

      "composer": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "period": { "type": "string" }
        },
        "required": ["name", "period"],
        "additionalProperties": false
      },

      "librettist": { "type": "string" },

      "premiere": {
        "type": "object",
        "properties": {
          "city": { "type": "string" },
          "venue": { "type": "string" },
          "date": { "type": "string", "format": "date" }
        },
        "required": ["city", "venue", "date"],
        "additionalProperties": false
      },

      "language": { "type": "string" },

      "duration_min": { "type": "integer", "minimum": 1 },

      "act_count": { "type": "integer", "minimum": 1 },

      "notable_arias": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 1
      },

      "lead_roles": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "character": { "type": "string" },
            "voice_type": { "type": "string" }
          },
          "required": ["character", "voice_type"],
          "additionalProperties": false
        },
        "minItems": 1
      },

      "themes": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 1
      }
    },

    "required": [
      "title",
      "composer",
      "librettist",
      "premiere",
      "language",
      "duration_min",
      "act_count",
      "notable_arias",
      "lead_roles",
      "themes"
    ],

    "additionalProperties": false
  }
}